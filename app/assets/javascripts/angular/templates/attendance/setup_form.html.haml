%form
  %section.form-section
    %h2.form-title Class Schedule

    .form-item
      %label
        .bold Start Date
        %input{"gc-date-time-input"=>"",
               "type"=>"text",
               "ng-model"=>"vm.attendance.startDate",
               "required"=>""}

    .form-item
      %label
        .bold End Date
        %input{"gc-date-time-input"=>"",
               "type"=>"text",
               "ng-model"=>"vm.attendance.endDate",
               "required"=>""}

    .form-item
      %label
        .bold Class Days
        %days-of-week

    .form-item{"ng-repeat"=>"day in vm.days"}
      %class-time{"ng-if"=>"day.selected"}
        {{day.label}}
        %input{"type"=>"time", "ng-model"=>"day.startTime", "required"=>""}
        to
        %input{"type"=>"time", "ng-model"=>"day.endTime", "required"=>""}

  %section.form-section
    %h2.form-title Points

    .form-item
      %label
        .bold Points for attendance?
        %input{"type"=>"radio",
               "ng-value"=>"true",
               "name"=>"pointsForAttendance",
               "ng-model"=>"vm.attendance.has_points",
               "required"=>""}
          Yes

        %input{"type"=>"radio",
               "ng-value"=>"false",
               "name"=>"pointsForAttendance",
               "ng-model"=>"vm.attendance.has_points",
               "required"=>""}
          No

    .form-item{"ng-if"=>"vm.attendance.has_points"}
      %label
        .bold How many?
        %input{"type"=>"text",
               "gc-number-input"=>"",
               "ng-model"=>"vm.attendance.point_total",
               "ng-required"=>"vm.attendance.has_points"}
