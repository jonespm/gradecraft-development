%form{"ng-submit"=>"setupCtrl.postAttendanceArticle(_.filter(daysOfWeekCtrl.days, 'selected'))",
      "name"=>"attendanceForm"}

  %section.form-section
    %h2.form-title Class Schedule

    .form-item
      %label
        .bold Start Date

        %input{"gc-date-time-input"=>"",
               "type"=>"text",
               "ng-model"=>"setupCtrl.attributes.startDate",
               "required"=>""}

    .form-item
      %label
        .bold End Date

        %input{"gc-date-time-input"=>"",
               "type"=>"text",
               "ng-model"=>"setupCtrl.attributes.endDate",
               "required"=>""}

    .form-item
      %label
        .bold Class Days

        %days-of-week

    .form-item{"ng-repeat"=>"day in daysOfWeekCtrl.days"}
      %class-time{"ng-if"=>"day.selected"}
        {{day.label}}
        %input{"type"=>"time", "ng-model"=>"day.startTime", "required"=>""}
        to
        %input{"type"=>"time", "ng-model"=>"day.endTime", "required"=>""}

  %section.form-section
    %h2.form-title Points

    .form-item
      .bold Points for attendance?

      %label
        %input{"type"=>"radio",
               "ng-value"=>"true",
               "name"=>"pointsForAttendance",
               "ng-model"=>"setupCtrl.attributes.has_points",
               "required"=>""}
          Yes
      %label
        %input{"type"=>"radio",
               "ng-value"=>"false",
               "name"=>"pointsForAttendance",
               "ng-model"=>"setupCtrl.attributes.has_points",
               "required"=>""}
          No

    .form-item{"ng-if"=>"setupCtrl.attributes.has_points"}
      %label
        .bold How many?

        %input{"type"=>"text",
               "gc-number-input"=>"",
               "ng-model"=>"setupCtrl.attributes.point_total",
               "ng-required"=>"setupCtrl.attributes.has_points"}

  .submit-buttons
    %ul
      %li
        %input{"type"=>"submit",
               "class"=>"button",
               "value"=>"Create Event",
               "ng-disabled"=>"attendanceForm.$invalid",
               "ng-class"=>"{'disabled': attendanceForm.$invalid}"}
      %li
        %a{"href"=>"{{setupCtrl.cancelRoute}}", "class"=>"button"}
          %i.fa.fa-times-circle
          Cancel
